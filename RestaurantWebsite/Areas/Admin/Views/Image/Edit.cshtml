@model Image
@{
    string title = ViewBag.Action + " Image";
    ViewBag.Title = title;
}

<h1>@ViewBag.Title</h1>

<form asp-action="Update" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ImageName">Image Name:</label>
        <input asp-for="ImageName" class="form-control">
    </div>



    <input type="hidden" asp-for="ImageId" />
    <input type="hidden" asp-for="FileName" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-action="MenuList" class="btn btn-primary">Cancel</a>
</form>