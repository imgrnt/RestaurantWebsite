@model List<Food>
@{
    ViewData["Title"] = "Menu";
    var culture = System.Globalization.CultureInfo.CreateSpecificCulture("en-US");
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<style>
    h5 {
        color: black;
        font-size: 30px;
    }

    p {
        color: darkslateblue;
        font-size: 18px;
    }
</style>



<div id="carouselPizza" class="carousel slide">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselPizza" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselPizza" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselPizza" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://cdn.ruled.me/wp-content/uploads/2014/08/pepperonipizza.jpg" height="500" class="d-block w-100" alt="pepperoni pizza">
            <div class="carousel-caption d-none d-md-block">
                <h5>Pepperoni Pizza</h5>
                <p>Only the finest salami is used here.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://ychef.files.bbci.co.uk/976x549/p0ctz0wr.jpg" height="500" class="d-block w-100" alt="pineapple pizza">
            <div class="carousel-caption d-none d-md-block">
                <h5>Pineapple Pizza</h5>
                <p>Only the finest pineapples are used here.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="https://myfoodbook.com.au/sites/default/files/styles/schema_img/public/recipe_photo/Whisk_PI_190919_Pizzas_006_MEAT_LOVERS.jpg" height="500" class="d-block w-100" alt="meat lover">
            <div class="carousel-caption d-none d-md-block">
                <h5>Meat Lovers Pizza</h5>
                <p>Only the finest meat is used here.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselPizza" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselPizza" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>








<section class="container tab-content py-4 py-sm-5">
    <h2 class="text-center pt-2 pt-sm-0 mb-sm-5">Pizza</h2>
    <div class="row pt-3 pt-sm-0">
        @foreach (var food in Model)
        {
            <!-- Item-->
            <div class="col-lg-3 col-md-4 col-sm-6 mb-grid-gutter">
                <div class="card product-card border pb-2">
                    <a class="d-block" href="#quick-view1" data-bs-toggle="modal"><img class="card-img-top" src="~/images/@food.Image.FileName" alt="Pizza"></a>
                    <div class="card-body pt-1 pb-2">
                        <h3 class="product-title fs-md"><a href="#quick-view1" data-bs-toggle="modal">@food.Name</a></h3>
                        <p class="fs-ms text-muted">@food.Description</p>

                        <div class="d-flex align-items-center justify-content-between">
                            <div class="product-price">
                                <span class="text-accent">@food.Price?.ToString("C2", culture)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        }










    </div>



</section>

